<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.questlife.questlife.View.SkillEditDialogController">
   <children>
      <GridPane layoutX="14.0" layoutY="14.0" prefHeight="408.0" prefWidth="323.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="120.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="203.0" minWidth="10.0" prefWidth="203.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name" />
            <Label text="Description" GridPane.rowIndex="1" />
            <Label text="Attribute" GridPane.rowIndex="2" />
            <Label text="Skill Type" GridPane.rowIndex="3" />
            <TextField fx:id="skillName" GridPane.columnIndex="1" />
            <TextArea fx:id="skillDescription" prefHeight="200.0" prefWidth="200.0" promptText="Give a short description of the skill" stylesheets="@DarkTheme.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="rb_strength" mnemonicParsing="false" text="Strength" textFill="WHITE">
                     <toggleGroup>
                        <ToggleGroup fx:id="Attribute" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rb_charisma" mnemonicParsing="false" text="Charisma" textFill="WHITE" toggleGroup="$Attribute" GridPane.columnIndex="1" />
                  <RadioButton fx:id="rb_dexterity" mnemonicParsing="false" text="Dexterity" textFill="WHITE" toggleGroup="$Attribute" GridPane.rowIndex="1" />
                  <RadioButton fx:id="rb_observation" mnemonicParsing="false" text="Observation" textFill="WHITE" toggleGroup="$Attribute" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <RadioButton fx:id="rb_mind" mnemonicParsing="false" text="Mind" textFill="WHITE" toggleGroup="$Attribute" GridPane.rowIndex="2" />
                  <RadioButton fx:id="rb_constitution" mnemonicParsing="false" text="Constitution" textFill="WHITE" toggleGroup="$Attribute" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="3">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="147.0" minWidth="10.0" prefWidth="147.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="56.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="rb_goalBased" mnemonicParsing="false" styleClass="label-bright" stylesheets="@DarkTheme.css" text="Goal Based">
                     <toggleGroup>
                        <ToggleGroup fx:id="SkillType" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rb_timeBased" mnemonicParsing="false" styleClass="label-bright" stylesheets="@DarkTheme.css" text="Time Based" toggleGroup="$SkillType" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children>
      </GridPane>
      <Button layoutX="136.0" layoutY="445.0" mnemonicParsing="false" onAction="#handleOk" text="Save" />
      <Button layoutX="231.0" layoutY="445.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
      <Button fx:id="addTime" layoutX="14.0" layoutY="445.0" mnemonicParsing="false" onAction="#handleAddTime" text="Add time" />
   </children>
</AnchorPane>
