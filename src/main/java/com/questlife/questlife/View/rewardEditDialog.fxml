<AnchorPane prefHeight="500.0" prefWidth="350.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.questlife.questlife.View.RewardEditDialogController">
   <children>
      <GridPane layoutX="14.0" layoutY="14.0" prefHeight="396.0" prefWidth="325.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="158.0" minWidth="10.0" prefWidth="120.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="205.0" minWidth="10.0" prefWidth="205.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="113.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="249.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="226.0" minHeight="10.0" prefHeight="99.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="226.0" minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="226.0" minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="130.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="130.0" minHeight="10.0" prefHeight="65.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name" />
            <Label text="Description" GridPane.rowIndex="1" />
            <Label text="Associated Skill" GridPane.rowIndex="2" />
            <Label text="Reward Type" GridPane.rowIndex="6" />
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="6">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="skillBased" mnemonicParsing="false" styleClass="label-bright" text="Skill level based">
                     <toggleGroup>
                        <ToggleGroup fx:id="rewardType" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="goldBased" mnemonicParsing="false" styleClass="label-bright" text="Gold based" toggleGroup="$rewardType" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <Label text="Cost" GridPane.rowIndex="3" />
            <TextField fx:id="rewardName" GridPane.columnIndex="1" />
            <TextField fx:id="rewardCost" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextArea fx:id="rewardDescription" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TableView fx:id="rewardAssociatedSkillTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
              <columns>
                <TableColumn prefWidth="75.0" text="Skills" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label text="Rising cost" GridPane.rowIndex="4" />
            <TextField fx:id="rewardRisingCost" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField fx:id="rewardAmount" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Amount available" GridPane.rowIndex="5" />
         </children>
      </GridPane>
      <Button layoutX="78.0" layoutY="432.0" mnemonicParsing="false" onAction="#handleOk" text="Save" />
      <Button layoutX="200.0" layoutY="432.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
   </children>
</AnchorPane>
